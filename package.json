{
  "author": "Wire",
  "browser": {
    "html5-websocket": "./browser/ws-fallback.js",
    "./dist/commonjs/util/buffer": "./browser/buffer.js"
  },
  "dependencies": {
    "@types/node": "8.0.8",
    "@types/text-encoding": "0.0.31",
    "@wireapp/store-engine": "0.0.15",
    "axios": "0.16.2",
    "html5-websocket": "1.0.0",
    "reconnecting-websocket": "3.0.7"
  },
  "devDependencies": {
    "browser-sync": "2.18.12",
    "concurrently": "3.5.0",
    "husky": "0.14.3",
    "istanbul": "0.4.5",
    "jasmine": "2.6.0",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-diff-reporter": "1.1.0",
    "karma-sourcemap-loader": "0.3.7",
    "lint-staged": "4.0.1",
    "moxios": "0.4.0",
    "optimist": "0.6.1",
    "prettier": "1.5.2",
    "rimraf": "2.6.1",
    "sinon": "2.3.6",
    "sinon-har-server": "0.3.0",
    "typescript": "2.4.1",
    "webpack": "3.1.0",
    "webpack-dev-server": "2.5.1"
  },
  "description": "Wire API Client to send and receive data.",
  "license": "GPL-3.0",
  "lint-staged": {
    "*.ts": [
      "yarn prettier",
      "git add"
    ]
  },
  "main": "./dist/commonjs/Client.js",
  "name": "@wireapp/api-client",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wireapp/wire-web-api-client.git"
  },
  "scripts": {
    "clear": "rimraf dist/commonjs && rimraf dist/demo-bundle.js",
    "coverage": "istanbul cover --report html ./node_modules/jasmine/bin/jasmine.js",
    "dist": "yarn clear && tsc",
    "postversion": "git push && git push --tags",
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --trailing-comma=\"all\" --no-bracket-spacing --print-width=120 --write \"src/**/*.ts\"",
    "preversion": "yarn && yarn dist && yarn test",
    "start": "yarn dist && concurrently \"tsc -w\" \"webpack -w\" \"browser-sync start -c bs-config.js\"",
    "version": "yarn dist",
    "watch": "webpack-dev-server --config webpack.config.js --open",
    "test": "yarn clear && yarn dist && yarn test:node && yarn test:browser",
    "test:node": "jasmine",
    "test:browser": "webpack && karma start karma.conf.js"
  },
  "types": "./dist/commonjs/Client.d.ts",
  "version": "0.0.42"
}
