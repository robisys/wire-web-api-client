{
  "author": "Wire",
  "browser": {
    "ws": "./browser/ws-fallback.js",
    "./dist/commonjs/util/buffer": "./browser/buffer.js"
  },
  "dependencies": {
    "@types/node": "8.0.1",
    "@types/text-encoding": "0.0.30",
    "@types/ws": "3.0.0",
    "axios": "0.16.2",
    "ws": "3.0.0"
  },
  "devDependencies": {
    "concurrently": "3.5.0",
    "husky": "0.13.4",
    "istanbul": "0.4.5",
    "jasmine": "2.6.0",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.1.1",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-diff-reporter": "1.0.0",
    "karma-sourcemap-loader": "0.3.7",
    "lint-staged": "4.0.0",
    "optimist": "0.6.1",
    "prettier": "1.4.4",
    "rimraf": "2.6.1",
    "sinon": "2.3.5",
    "sinon-har-server": "0.3.0",
    "typescript": "2.3.4",
    "webpack": "2.6.1",
    "webpack-dev-server": "2.5.0"
  },
  "description": "Wire API Client to send and receive data.",
  "license": "GPL-3.0",
  "lint-staged": {
    "*.ts": [
      "yarn prettier",
      "git add"
    ]
  },
  "main": "./dist/commonjs/Client.js",
  "name": "@wireapp/api-client",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wireapp/wire-web-api-client.git"
  },
  "scripts": {
    "clean": "rimraf dist/commonjs && rimraf dist/demo-bundle.js",
    "coverage": "istanbul cover --report html ./node_modules/jasmine/bin/jasmine.js",
    "dist": "yarn clean && tsc",
    "postversion": "git push && git push --tags",
    "prettier": "prettier --single-quote --trailing-comma=\"all\" --no-bracket-spacing --write \"src/**/*.ts\"",
    "preversion": "yarn && yarn dist && yarn test",
    "start": "yarn dist && concurrently \"tsc -w\" \"yarn watch\"",
    "version": "yarn dist",
    "watch": "webpack-dev-server --config webpack.config.js --open",
    "test": "yarn clean && yarn dist && yarn test:node && yarn test:browser",
    "test:node": "jasmine",
    "test:browser": "webpack && karma start karma.conf.js"
  },
  "types": "./dist/commonjs/Client.d.ts",
  "version": "0.0.30"
}
